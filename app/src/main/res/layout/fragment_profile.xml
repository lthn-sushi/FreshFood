<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
   <View
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:background="@drawable/bg2"/>
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_previous_lefft"/>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvFullName"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textSize="20dp"
            android:fontFamily="@font/allfont_medium"/>
        <TextView
            android:id="@+id/tvEmail"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@gmail.com"
            android:textSize="16dp"
            android:fontFamily="@font/allfont_medium"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivAvt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_avt"
        android:src="@drawable/ic_security" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_below="@id/ivAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<!--        Email-->
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_email"
                    android:background="@drawable/bg_icon_profile"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>
                <TextView
                    android:id="@+id/tvEmailAddress"
                    android:textStyle="bold"
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@gmail.com"/>
            </LinearLayout>


        </LinearLayout>
<!--        Email-->
<!--        Số điện thoại-->
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone"
                    android:background="@drawable/bg_icon_profile"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"/>
                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:textStyle="bold"
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+84 - 793879960"/>
            </LinearLayout>



        </LinearLayout>
<!--        Số điện thoại-->
<!--        Địa chỉ-->
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_adress"
                    android:background="@drawable/bg_icon_profile"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"/>
                <TextView
                    android:id="@+id/tvAddress"
                    android:textStyle="bold"
                    android:fontFamily="@font/allfont_medium"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quận 12 - TP HCM"/>
            </LinearLayout>
        </LinearLayout>
<!--        Địa chỉ-->
        <Button
            android:background="@drawable/bg_button"
            android:id="@+id/btnEditProfile"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="Edit Profile"
            />
        <Button
            android:id="@+id/edChangePassword"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="Change password"
            />
    </LinearLayout>

</RelativeLayout>